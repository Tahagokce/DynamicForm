@model IEnumerable<DataAccess.Form>

<table class="table table-striped">
    <thead>
    <tr>
        <th scope="col">Form Id</th>
        <th scope="col">Form adı</th>
        <th scope="col">Oluşturma tarihi</th>
        <th scope="col">Kim oluşturdu</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <th scope="row">@item.Id</th>
            <td>@item.Title</td>
            <td>@item.CreateTime</td>
            <td>@item.UserId</td>
            <td>
                <a href="/Form/Edit/@item.Id">
                    <button type="button" class="btn btn-primary">Düzenle</button>
                </a>
            </td>
            <td>
                <a href="/Question/Create/@item.Id">
                    <button type="button" class="btn btn-primary">Soru oluştur</button>
                </a>
            </td>
            <td>
                <a href="/AnsweredForm/AnswerToForm/@item.Id">
                    <button type="button" class="btn btn-primary">Formu cevapla</button>
                </a>
            </td>
            <td>
                <a href="/AnsweredForm/AnswerView/@item.Id">
                    <button type="button" class="btn btn-primary">Form cevaplarını görüntüle</button>
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>