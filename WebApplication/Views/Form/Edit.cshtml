@using DataAccess
@model DataAccess.Form


<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <form action="/Form/Edit" method="post">
                    <h4 class="form-header text-uppercase">
                        Form oluştur 
                    </h4>
                    <div class="form-group row">
                        <label  class="col-sm-2 col-form-label">Başlık</label>
                        <div class="col-sm-4">
                            <input type="text" value="@Model.Title" class="form-control" id="title" name="Title">
                        </div>

                    </div>       
                    <div class="form-group row">
                        <label for="input-10" class="col-sm-2 col-form-label">Açıklama</label>
                        <div class="col-sm-4">
                            <input type="text" value="@Model.Description" class="form-control" id="description" name="Description">
                        </div>

                    </div>
                    <input type="hidden" value="@Model.Id" name="Id">
                    <input type="hidden" value="@Model.UserId" name="UserId">
                    <input type="hidden" value="@Model.CreateTime" name="CreateTime">

                    <div class="form-footer">
                        <button type="submit" class="btn btn-danger"><i class="fa fa-times"></i> CANCEL</button>
                        <button type="submit" class="btn btn-success"><i class="fa fa-check-square-o"></i> SAVE</button>
                    </div>
                </form>
            </div>
            
            
            @foreach (var item in Model.Questions)
            {
                <br/>
                <div class="card text-center">
                    <div class="card-header">
                        <ul class="nav nav-tabs card-header-tabs">
                            <h4>@item.Question1</h4>
                        </ul>
                    </div>
                    <div class="card-body">
                        <form action="/Question/Edit" method="post">
                            <div class="col-sm-4">
                                <input type="hidden" value="@item.FormId" name="FormId">
                                <input type="hidden" value="@item.Id" name="Id">
                                <input type="text" value="@item.Question1" class="form-control" name="Question1">
                            </div>
                            <button type="submit"  class="btn btn-primary">Düzenle</button>

                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>